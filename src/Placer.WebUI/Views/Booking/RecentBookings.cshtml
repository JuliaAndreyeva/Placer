@model List<Placer.WebUI.ViewModels.Bookings.ListRecentBookingsViewModel>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
   <div class="accordion-wrap">
       <table>
           <thead>
               <tr>
                   <th>Tour</th>
                   <th>Creation Time</th>
                   <th>Booking Deadline</th>
                   <th>Price</th>
               </tr>
           </thead>
           <tbody>
               @for (int i = 0; i < Model.Count; i++)
               {
                   var booking = Model[i];
                   <tr>
                       <td>
                           <a asp-controller="Tour" asp-action="GetTourDetails" asp-route-tourId="@booking.TourId">Tour</a>
                       </td>
                       <td>@booking.CreationTime</td>
                       <td>@booking.BookingDeadline</td>
                       <td>@booking.BookingPrice</td>
                   </tr>
               }
           </tbody>
       </table>
   </div>

    <script src="~/js/Scripts.js"></script>
</head>