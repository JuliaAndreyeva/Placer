@model List<Placer.WebUI.ViewModels.Bookings.ListPastBookingsViewModel>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <div class="accordion-wrap">
        <table>
            <thead>
                <tr>
                    <th>Tour</th>
                    <th>Booking Price</th>
                    <th>Creation Time</th>
                    <th>Booking Duration</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var booking = Model[i];
                    <tr>
                        <td class="border-right">
                            <a href="/TourDetails/@booking.TourId">Tour</a>
                        </td>
                        <td class="border-right">@booking.BookingPrice</td>
                         <td class="border-right">@booking.CreationTime</td>
                         <td class="border-right">@booking.BookingDuration</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/js/Scripts.js"></script>
</head>

